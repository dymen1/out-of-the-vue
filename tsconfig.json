{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "declaration": true,
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@test/*": [
                "test/*"
            ]
        }
    },
    "exclude": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "test"
    ]
}
